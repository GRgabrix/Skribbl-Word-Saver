{
  "manifest_version": 3,
  "name": "Parole Skribbl",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["*://skribbl.io/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://skribbl.io/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
